
import WeatherMonitor.*
import WeatherMonitor.include.messages.*

 

nodeType WeatherNode{
	
	mem 16 MB   
	space 200 MB
} 

//only one of the nodes has thermostat
host node1 : WeatherNode{
	device Thermostat tag north
	mem 32 MB
	net eth0 address 129.59.129.1
}

app WeatherMonitor{
	//All Nodes have weather displays
	on all WeatherNode WeatherIndicator	
	//this is correct because we only want one instance of WeatherSensor
	on node1  WeatherReceiver
}
