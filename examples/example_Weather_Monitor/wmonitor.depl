package WeatherMonitor.depl

import WeatherMonitor.*

nodeType WeatherNode{
	device thermostat tag north
	mem 16 MB
	space 200 MB
}

node node1 : WeatherNode{
	mem 32 MB
	net eth0 address 129.59.129.1
}

app WeatherMonitor{
	on all WeatherNode WeatherMonitor.WeatherIndicator
	on node1 WeatherMonitor.WeatherReceiver
}
